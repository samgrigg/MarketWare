<% content_for :header do %>
	<%= stylesheet_link_tag "jquery.fancybox-1.3.1" %>
	<%= stylesheet_link_tag "product" %>
	
	<%= javascript_include_tag "jquery.fancybox-1.3.1" %>
	<%= javascript_include_tag 'jquery.media' %>
	<%= javascript_include_tag 'product' %>
	<%= javascript_include_tag "easySlider1.7"%>
	<script type="text/javascript">
		$(function() {
			//Hook up the 'modal' type box for gathering user information and showing the product demo
			$(".register_user, .demo").fancybox({
				'scrolling'		: 'no',
				'titleShow'		: false,
				'overlayOpacity'	: 	.65,
				'overlayColor'		: 	'#000',
				'width'			:380,
				'height'		:285,
				'hideOnContentClick'	: false
			});
			
			$("#demo-video").media({
				width: 640,
				height: 380
			});
			
			//Make slideshow out of testimonials
			if ($("#slideshow")) {
				$("#slideshow").easySlider();
			}
			
			$("#demo-video").click(function() {
				$("#response_type").val("product_demo")
			});
			
			$("#try-it-free-btn").click(function() {
				$("#response_type").val("try_it_free")
			});
		})
		
		function startDownload() {
			$("#try-it-free-btn-download").click()
		}
		
		function showDemo() {
			$("#demo-video").attr("href", "http://marketware.com.s3.amazonaws.com/Videos/physician_relations.flv");
			
			$("#demo-video").media({
				width: 640,
				height: 380
			});
			$("#demo-video").click();
		}
	</script>
<% end -%>


<div class="page-header">
	<h2 class="grid_4 alpha">Physician Relations</h2>
	
	<div class="nav grid_8 omega">
		<%= link_to "Product Demo",		{:controller => :physician_relations} %> |
		<%= link_to "Customize It", 	{:controller => :physician_relations, :action => :customize} %> |
		<%= link_to "Reporting",		{:controller => :physician_relations, :action => :reporting} %> |
		<%= link_to "Technical Specs",	{:controller => :physician_relations, :action => :tech_specs} %>
	</div>
</div>

