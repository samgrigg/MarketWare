<% content_for :header do %>
	<%= stylesheet_link_tag "home" %>
	<%= stylesheet_link_tag "jquery.fancybox-1.3.1" %>
	
	<%= javascript_include_tag 'jquery.media' %>
	<%= javascript_include_tag "easySlider1.7"%>
	<%= javascript_include_tag "jquery.qtip-1.0.0-rc3.min" %>
	<script type="text/javascript">
	$(function() {
		if ($("#slideshow")) {
			$("#slideshow").easySlider({
				auto:true,
				continuous:true,
				speed:300,
				pause:6000
			});
		}
		$("#success-stories img.mary_dybdahl").qtip({
			content: {url: '/success_stories/mary_dybdahl.html'},
			position: {corner: {target: 'topRight',tooltip: 'middleLeft'}},
			style: {width:{min:200, max:550}}
		});
		$("#success-stories img.rick_beal").qtip({
			content: {url: '/success_stories/rick_beal.html'},
			position: {corner: {target: 'topRight',tooltip: 'middleLeft'}},
			style: {width:{min:200, max:550}}
		});
		$("#success-stories img.michael_padova").qtip({
			content: {url: '/success_stories/michael_padova.html'},
			position: {corner: {target: 'topRight',tooltip: 'middleLeft'}},
			style: {width:{min:200, max:550}}
		});
		$("#success-stories img.michael_delgado").qtip({
			content: {url: '/success_stories/michael_delgado.html'},
			position: {corner: {target: 'topRight',tooltip: 'middleLeft'}},
			style: {width:{min:200, max:550}}
		});
		
		$(".register_user, .demo").fancybox({
			'scrolling'		: 'no',
			'titleShow'		: false,
			'overlayOpacity'	: 	.65,
			'overlayColor'		: 	'#000',
			'width'			:380,
			'height'		:285,
			'hideOnContentClick'	: false
		});
		
		$(".btn-gray").click(function() {
			var prod_id = this.id.substring(this.id.lastIndexOf("-")+1);
			$("#response_type_"+prod_id).val("try_it_free")
		});
	})
	
	function startDownload(prod_id) {
		$("#try-it-free-btn-download-" + prod_id).click()
	}
	
	function showDemo(prod_id) {
		$("#demo-video-show-" + prod_id).fancybox({
			'scrolling'		: 'no',
			'titleShow'		: false,
			'overlayOpacity'	: 	.65,
			'overlayColor'		: 	'#000',
			'width'			:380,
			'height'		:285
		});
		$("#demo-video-show-" + prod_id).click();
	}
	
	</script>
<% end %>
