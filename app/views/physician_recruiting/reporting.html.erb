<% content_for :header do %>
	<%= stylesheet_link_tag "product" %>
	
	<%= javascript_include_tag 'jquery.media', 'product', 'easySlider1.7' %>
	<script type="text/javascript">
		$(function() {	
			//Make slideshow out of testimonials
			if ($("#slideshow")) {
				$("#slideshow").easySlider();
			}
			
			
		})		
	</script>
<% end -%>


<div class="page-header">
	<h2 class="grid_4 alpha">Physician Recruiting</h2>
	
	<div class="nav grid_8 omega">
		<%= link_to "Product Demo",		{:controller => :physician_recruiting} %> |
		<%= link_to "Customize It", 	{:controller => :physician_recruiting, :action => :customize} %> |
		<%= link_to "Reporting",		{:controller => :physician_recruiting, :action => :reporting} %> |
		<%= link_to "Technical Specs",	{:controller => :physician_recruiting, :action => :tech_specs} %>
	</div>
</div>

<div class="product-main content-box grid_12 alpha omega">
	<div class='margin-md'>
		<div class="grid_6 alphaa">
			<h6>Reporting Capabilities
</h6>
			<p>Run Group/Provider Profile Reports, Call Reports, Issues Reports, Expense Reports and more.</p>
			<p>The Built-in Report Designer allows you to group, categorize, sort and display any information contained in your database.  Export your reports to PDF, Excel, Word, or directly to your Printer.</p>
			
			<h6>Exporting</h6>
			<p>Export any list to Excel with one click of the button.</p>
		</div>
		<div class="grid_5 omega">
			<!-- <%= image_tag "" %> -->
		</div>
	</div>
</div>

<div class="small-content-box grid_6 alpha">
	<div class="margin-md">	
		<div id="slideshow" class="testimonials wide">
			<ul>
				<%= render :partial => 'shared/testimonials' %>
			</ul>
		</div>
	</div>
</div>
<div class="boxless-content grid_6 omega">
	<div class="margin-md">	
		<%= render :partial => 'shared/white_papers' %>
	</div>
</div>
