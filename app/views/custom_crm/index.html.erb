<% content_for :header do %>
	<%= stylesheet_link_tag "jquery.fancybox-1.3.1", "product", :cache => true %>
	
	<%= javascript_include_tag "jquery.fancybox-1.3.1", "flowplayer-3.2.2.min", 'product', "easySlider1.7" %>
	
	<script type="text/javascript">
		var current_user = <%= !session["current_username"].nil? %>;
		
		$(function() {
			$("#try-it-free-btn").click(function() {
				download_btn_click(
					"Marketware Free Trial", 
					"http://marketware.com.s3.amazonaws.com/files/marketware_setup.exe", 
					"free_trial")
			});
		})
	</script>
<% end -%>

<div class="page-header">
	<h2 class="grid_4 alpha">Custom CRM</h2>
	
	<%= render :partial => 'nav' %>

</div>

<div style="display:none">
	<div id="demo-register-form" class="margin-md fancybox-content">
		<h5>Please enter your contact information:</h5>
		<%= render :partial => "shared/user_form", :object => User.new, :locals => {:product => "physician_relations", :response_type => "product_demo"} %>
		<p>To view the demo video, we ask that you provide your contact information so we can contact you to answer further questions.</p>
	</div>
</div>

<div style="display:none">
	<div id="trial-register-form" class="margin-md fancybox-content">
		<h5>Please enter your contact information.</h5>
		<p>We will contact you with instructions to download your trial of MarketWare.</p>
		<%= render :partial => "shared/user_form", :object => User.new, :locals => {:product => "physician_relations", :response_type => "try_it_free"} %>
	</div>
</div>

<a id="thank_you_link" href="#thank_you" class="fancybox" style="display:none">&nbsp;</a>
<div style="display:none">
	<div id="thank_you" class="margin-md fancybox-content">
		<h5>Thank you.</h5>
		<p>One of our consultants will contact you to answer any questions you may have.</p>
	</div>
</div>

